ExemploCanvas:

<ExemploCanvas>:
    canvas:
        Color:
            # Podemos especificar as cores usadas
            rgba: 1, 0, 0, 0.3
        Line:
            # Podemos desenhar um círculo com Line
            circle: (200, 200, 100)  # center_x, center_y, raio
            width: 2

        Line:
            # Podemos desenhar uma elipse com Line
            ellipse: (500, 300, 100, 200)  # center_x, center_y, raio_x, raio_y
            width: 2

        Color:
            # Podemos especificar as cores usadas
            rgba: 0, 0, 1, 1
        Line:
            # Podemos desenhar um retângulo com Line
            rectangle: (400, 50, 300, 200)  # x, y, largura, altura
            width: 2