ExemploPageLayout:

<ExemploPageLayout@PageLayout>:
    # Nesse tipo de layout funciona como um livro
    # onde podemos avançar para outras páginas
    # ou voltar. Vale ressaltar que todos os
    # layouts são transparantes
    MainWidget:
    ExemploBoxLayout:
    ExemploAnchorLayout:
    ExemploGridLayout:
    ExemploScrollView:

<ExemploScrollView@ScrollView>:
    ExemploStackLayout:
        size_hint: 1, None
        height: self.minimum_height

<ExemploStackLayout>:

<ExemploGridLayout@GridLayout>:
    cols: 3
    rows: 2

    Button:
        text: 'A'
        size_hint: None, 1
        width: '60dp'

    ExemploBoxLayout

    Button:
        text: 'C'

    Button:
        text: 'D'
        size_hint: None, 1
        width: '60dp'
    Button:

        text: 'E'
    Button:

        text: 'F'

<ExemploAnchorLayout>:
    anchor_x: 'center'

    anchor_y: 'top'

    BoxLayout:
        size_hint: 0.2, 0.2

        Button:
            text: 'A'

        Button:
            text: 'B'

<ExemploBoxLayout>:
    orientation: 'horizontal'

    Button:
        text: 'A'
        size_hint: 0.5, 0.5
        pos_hint: {'center_y': 0.5}

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'

        Button:
            text: 'B1'

        Button:
            text: 'B2'

        Button:
            text: 'B3'

        Button:
            text: 'B4'

    Label:
        text: 'C'

<MainWidget>:
    Button:
        text: 'Olá'
        size: '100dp', '80dp'
        pos: '100dp', '200dp'
        color: 0, 0, 1, 1

    Label:
        text: 'Mundo'
        size: '100dp', '80dp'
        pos: '200dp', '300dp'
        color: 1, 0, 0, 1